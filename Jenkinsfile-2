pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
               sh echo "Hello world"
            }
            post {
                success {
                    script {
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
    }
    post {
        always {
            echo currentBuild.currentResult
        }
    }
}
